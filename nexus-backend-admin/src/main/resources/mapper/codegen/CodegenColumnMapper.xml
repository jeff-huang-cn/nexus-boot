<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nexus.backend.admin.mapper.codegen.CodegenColumnMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.nexus.backend.admin.entity.codegen.CodegenColumn">
        <id column="id" property="id" />
        <result column="table_id" property="tableId" />
        <result column="column_name" property="columnName" />
        <result column="data_type" property="dataType" />
        <result column="column_comment" property="columnComment" />
        <result column="nullable" property="nullable" />
        <result column="primary_key" property="primaryKey" />
        <result column="auto_increment" property="autoIncrement" />
        <result column="ordinal_position" property="ordinalPosition" />
        <result column="java_type" property="javaType" />
        <result column="java_field" property="javaField" />
        <result column="dict_type" property="dictType" />
        <result column="example" property="example" />
        <result column="create_operation" property="createOperation" />
        <result column="update_operation" property="updateOperation" />
        <result column="list_operation" property="listOperation" />
        <result column="list_operation_condition" property="listOperationCondition" />
        <result column="list_operation_result" property="listOperationResult" />
        <result column="html_type" property="htmlType" />
        <result column="creator" property="creator" />
        <result column="create_time" property="createTime" />
        <result column="updater" property="updater" />
        <result column="update_time" property="updateTime" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, table_id, column_name, data_type, column_comment, nullable, primary_key, auto_increment,
        ordinal_position, java_type, java_field, dict_type, example, create_operation, update_operation,
        list_operation, list_operation_condition, list_operation_result, html_type, creator, create_time,
        updater, update_time, deleted
    </sql>

    <!-- 根据表ID查询字段列表 -->
    <select id="selectByTableId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM codegen_column
        WHERE table_id = #{tableId}
        AND deleted = 0
        ORDER BY ordinal_position ASC
    </select>

    <!-- 根据表ID查询主键字段 -->
    <select id="selectPrimaryKeyByTableId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM codegen_column
        WHERE table_id = #{tableId}
        AND primary_key = 1
        AND deleted = 0
        LIMIT 1
    </select>

    <!-- 根据表ID和字段名查询字段信息 -->
    <select id="selectByTableIdAndColumnName" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM codegen_column
        WHERE table_id = #{tableId}
        AND column_name = #{columnName}
        AND deleted = 0
        LIMIT 1
    </select>

    <!-- 根据表ID查询用于列表显示的字段 -->
    <select id="selectListResultColumnsByTableId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM codegen_column
        WHERE table_id = #{tableId}
        AND list_operation_result = 1
        AND deleted = 0
        ORDER BY ordinal_position ASC
    </select>

    <!-- 根据表ID查询用于查询条件的字段 -->
    <select id="selectListOperationColumnsByTableId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM codegen_column
        WHERE table_id = #{tableId}
        AND list_operation = 1
        AND deleted = 0
        ORDER BY ordinal_position ASC
    </select>

</mapper>
