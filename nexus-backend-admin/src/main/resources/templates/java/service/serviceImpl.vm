        // 删除主表
        ${classNameFirstLower}Mapper.deleteById(id);
#if($templateType == 3)
        // 删除子表
        ${subTable.classNameFirstLower}Mapper.deleteBy${subJoinColumn.javaField.substring(0,1).toUpperCase()}${subJoinColumn.javaField.substring(1)}(id);
