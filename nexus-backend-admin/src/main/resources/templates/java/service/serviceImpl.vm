    public void batchCreate(List<${className}SaveReqVO> createReqVOs) {
        if (createReqVOs == null || createReqVOs.isEmpty()) {
            return;
        }
        
        // 转换为 DO 列表
        List<${className}DO> doList = createReqVOs.stream()
                .map(${className}Convert.INSTANCE::toDO)
                .collect(Collectors.toList());
        // 分批插入，每批100条，避免锁表时间过长
        List<List<${className}DO>> partitions = Lists.partition(doList, 100);
        for (List<${className}DO> partition : partitions) {
            ${classNameFirstLower}Mapper.insertBatch(partition);
        }

#if($templateType == 3)
        // 批量插入子表
        for (int i = 0; i < createReqVOs.size(); i++) {
            ${className}SaveReqVO reqVO = createReqVOs.get(i);
            ${className}DO ${classNameFirstLower} = doList.get(i);
            createSubList(${classNameFirstLower}.getId(), reqVO.get${subTable.className}s());
        }
#end
    }

