        // 转换为 DO 列表
        List<${className}DO> doList = updateReqVOs.stream()
                .map(${className}Convert.INSTANCE::toDO)
                .collect(Collectors.toList());

        // 分批更新，每批100条，避免锁表时间过长
        List<List<${className}DO>> partitions = Lists.partition(doList, 100);
        for (List<${className}DO> partition : partitions) {
            ${classNameFirstLower}Mapper.updateBatch(partition);
